{
  "build": {
    "preview": {
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      }
    },
    "preview2": {
      "developmentClient": true
    },
    "production": {
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:bundleRelease",
        "config": {
          "shrinkRecources": true,
          "minifyEnabled": true,
          "proguardFiles": ["proguard-rules.pro"]
        }
      }
    }
  },
  "cli": {
    "version": ">= 8.0.0",
    "appVersionSource": "remote"
  }
}